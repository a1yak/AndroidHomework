<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentCat">

    <TextView
        android:id="@+id/tv_introCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="This time cat will try to jump up the table, set data accordingly"/>

    <EditText
        android:id="@+id/et_catName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="25dp"
        android:hint="Enter cat's name: "/>

    <EditText
        android:id="@+id/et_catWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="125dp"
        android:layout_marginStart="25dp"
        android:hint="Enter cat's weight in kg: "/>

    <EditText
        android:id="@+id/et_catHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="170dp"
        android:layout_marginStart="25dp"
        android:hint="Enter cat's height in cm: "/>

    <EditText
        android:id="@+id/et_catLenght"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="215dp"
        android:layout_marginStart="25dp"
        android:hint="Enter cat's length in cm: "/>

    <EditText
        android:id="@+id/et_tableLenght"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="260dp"
        android:layout_marginStart="25dp"
        android:hint="Enter table's length in cm: "/>

    <EditText
        android:id="@+id/et_tableHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="305dp"
        android:layout_marginStart="25dp"
        android:hint="Enter table's height in cm: "/>

    <EditText
        android:id="@+id/et_tableMaterial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="350dp"
        android:layout_marginStart="25dp"
        android:hint="Is material of table stable for touching? (1 - no  2 - yes) "/>

    <Button
       android:id="@+id/btn_calculateJump"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/calculate"
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="500dp"/>
    <Button
    android:id="@+id/btn_trick"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Click me"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="560dp"/>

</FrameLayout>